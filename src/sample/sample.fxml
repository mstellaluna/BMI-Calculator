<GridPane alignment="center" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">
    <columnConstraints>
        <ColumnConstraints />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints />
    </rowConstraints>
    <children>
        <AnchorPane onKeyPressed="#enterKeyPress" prefHeight="274.0" prefWidth="521.0">
            <children>
                <Label layoutX="73.0" layoutY="31.0" text="BMI Index Calculator">
                    <font>
                        <Font name="System Bold" size="36.0" />
                    </font>
                </Label>
                <TextField fx:id="txtHeightInMeters" layoutX="149.0" layoutY="112.0" promptText="Enter Height in meters" />
                <TextField fx:id="txtWeightInKg" layoutX="149.0" layoutY="152.0" promptText="Enter Weight in kg" />
                <Button layoutX="339.0" layoutY="152.0" mnemonicParsing="false" onAction="#calculateBMI" text="Calculate BMI" />
                <Label fx:id="labelBmiValue" layoutX="73.0" layoutY="231.0" text="Label" visible="false">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font></Label>
                <Label fx:id="labelBmiResult" layoutX="339.0" layoutY="231.0" text="Label" visible="false">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font></Label>
            </children>
        </AnchorPane>
    </children>
</GridPane>
